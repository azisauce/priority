generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  userImage String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  groups    Group[]
  items     Item[]
}

model Group {
  id        String   @id @default(cuid())
  groupName String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     Item[]

  @@unique([groupName, userId])
}

model Item {
  id        String   @id @default(cuid())
  itemName  String
  pricing   Float
  urgency   Int      @default(3)
  impact    Int      @default(3)
  risk      Int      @default(3)
  frequency Int      @default(3)
  priority  Float
  groupId   String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  group     Group    @relation(fields: [groupId], references: [id], onDelete: Restrict)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
